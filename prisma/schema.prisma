// YouTube Playlist Management
model PlaylistVideo {
  id        Int     @id @default(autoincrement())
  youtubeId String  @unique
  title     String
  order     Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
